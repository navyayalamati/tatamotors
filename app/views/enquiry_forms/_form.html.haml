= form_for @enquiry_form, :html => {:class => "form-horizontal" , :role => "form"} do |f|
  .row
    .col-md-2.col-xs-12
      .pull-left.required
        = f.label :name
    .col-md-3.col-xs-12
      = f.text_field :name , :class => 'form-control'
  %br
  .row
    .col-md-2.col-xs-12
      = f.label :address
    .col-md-3.col-xs-12
      = f.text_area :address , :class => 'form-control'
  %br
  .row
    .col-md-2.col-xs-12
      .pull-left.required
        = f.label :email
    .col-md-3.col-xs-12
      = f.text_field :email , :class => 'form-control'
  %br
  .row
    .col-md-2.col-xs-12
      = f.label :mobile
    .col-md-3.col-xs-12
      = f.text_field :mobile , :class => 'form-control'
  %br
  .row
    .col-md-2.col-xs-12
      = f.label :city
    .col-md-3.col-xs-12
      = f.text_field :city , :class => 'form-control'
  %br
  .row
    .col-md-2.col-xs-12
      = f.label :zip_code
    .col-md-3.col-xs-12
      = f.text_field :zip_code , :class => 'form-control'
  %br
  .row
    .col-md-2.col-xs-12
      .pull-left.required
        = f.label :vehicle_type
    .col-md-3.col-xs-12
      = f.number_field :vehicle_type , :class => 'form-control'
  %br
  .row
    .col-md-2.col-xs-12
      = f.label :query
    .col-md-3.col-xs-12
      = f.text_area :query, :class => 'form-control'
  %br
  .row
    .col-md-2.col-xs-12
    .col-md-1.col-xs-12
      = button_tag 'Submit', :type => 'submit', :class => 'btn btn-default'
