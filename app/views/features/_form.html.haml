= form_for @feature do |f|
  - if @feature.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feature.errors.count, "error")} prohibited this feature from being saved:"
      %ul
        - @feature.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :passenger_vehicle_id
    = f.number_field :passenger_vehicle_id
  .field
    = f.label :feature_type
    = f.text_field :feature_type
  .field
    = f.label :feature
    = f.text_field :feature
  .actions
    = f.submit 'Save'
