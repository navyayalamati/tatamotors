= form_for @upload do |f|
  - if @upload.errors.any?
    #error_explanation
      %h2= "#{pluralize(@upload.errors.count, "error")} prohibited this upload from being saved:"
      %ul
        - @upload.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :file_name
    = f.text_field :file_name
  .field
    = f.label :file
    = f.text_field :file
  .field
    = f.label :file_type
    = f.text_field :file_type
  .actions
    = f.submit 'Save'
